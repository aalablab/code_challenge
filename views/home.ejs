<%- include('partials/header') %>

<div class="dashcontainer">
  <div class="emptySide"></div>
  <div class="mainSide">
    <div class="errorNotification">
      <% if (loginOK == false) { %> <%= errors %> <% } %>
    </div>
    <form action="/signin" method="POST">
      <label for="installerID">Installer ID:</label><br />
      <input
        class="loginField"
        type="number"
        id="installerID"
        name="installerID"
        required /><br />
      <label for="pword">Password:</label><br />
      <input
        class="loginField"
        type="password"
        id="pword"
        name="pword"
        required /><br /><br />
      <input type="submit" class="loginbtn" value="Sign in" />
      <input type="reset" class="loginbtn" />
    </form>
  </div>
</div>

<%- include('partials/footer') %>
